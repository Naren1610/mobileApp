<PassRegistrationScreenManager>:
    PersonalDetailsScreen:
        name: 'personal_details'
    EducationInformationScreen:
        name: 'education_information'
    UploadFilesScreen:
        name: 'upload_files'

<PersonalDetailsScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: '10dp'
        spacing: '10dp'
        MDTextField:
            hint_text: "Father's Name"
        MDTextField:
            hint_text: "Current Residential Address"
        MDRaisedButton:
            text: "Next"
            on_release:
                root.manager.go_to_next('personal_details')

<EducationInformationScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: '10dp'
        spacing: '10dp'
        MDTextField:
            hint_text: "School/College Details"
        MDRaisedButton:
            text: "Previous"
            on_release:
                root.manager.go_to_prev('education_information')
        MDRaisedButton:
            text: "Next"
            on_release:
                root.manager.go_to_next('education_information')

<UploadFilesScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: '10dp'
        spacing: '10dp'
        MDRaisedButton:
            text: "Upload Photo"
            on_release:
                root.select_photo()
        MDLabel:
            id: photo_name
        MDRaisedButton:
            text: "Upload ID Proof"
            on_release:
                root.select_id_proof()
        MDLabel:
            id: id_proof_name
        MDRaisedButton:
            text: "Previous"
            on_release:
                root.manager.go_to_prev('upload_files')
