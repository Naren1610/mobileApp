<PassRegistrationPage>:
    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        GridLayout:
            id: main_grid
            size_hint_y: None
            height: max(self.minimum_height, root.height)
            cols: 1
            spacing: dp(10)
            padding: dp(10)

            MDLabel:
                text: 'Step 1: Personal Details'
                size_hint_y: None
                height: dp(48)

            MDTextField:
                hint_text: "Father's Name"
                size_hint_y: None
                height: dp(48)

            MDTextField:
                hint_text: "Current Residential Address"
                size_hint_y: None
                height: dp(48)

            MDLabel:
                text: 'Step 2: Education Information'
                size_hint_y: None
                height: dp(48)

            MDTextField:
                hint_text: "School/College Details"
                size_hint_y: None
                height: dp(48)

            MDLabel:
                text: 'Step 3: Upload Files'
                size_hint_y: None
                height: dp(48)

            MDRaisedButton:
                text: "Upload Photo"
                on_release: root.select_photo()
                size_hint_y: None
                height: dp(48)

            MDLabel:
                id: photo_name
                text: ""
                size_hint_y: None
                height: dp(48)

            MDRaisedButton:
                text: "Upload ID Proof"
                on_release: root.select_id_proof()
                size_hint_y: None
                height: dp(48)

            MDLabel:
                id: id_proof_name
                text: ""
                size_hint_y: None
                height: dp(48)

            MDLabel:
                text: 'Step 4: Route and Pass Type'
                size_hint_y: None
                height: dp(48)

            MDDropDownItem:
                id: route_selector
                text: "Select Route"
                on_release: root.open_route_menu()
                size_hint_y: None
                height: dp(48)

            MDDropDownItem:
                id: pass_selector
                text: "Select Pass Type"
                on_release: root.open_pass_menu()
                size_hint_y: None
                height: dp(48)
