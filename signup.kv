<SignupScreen>:
    name:'signup'
    Screen:
        Image:
            source: "BGP.jpg"
            size_hint: None, None
            width: "360dp"
            height: "640dp"
            pos_hint: {'center_x': .5, 'center_y': .5}

        MDTextField:
            id:first_name
            hint_text: "First Name"
            mode: "rectangle"
            size_hint_x: .85
            pos_hint: {'center_x': .5, 'center_y': .75}
            on_text: self.text = self.text.replace(" ", "")
            write_tab: False

        MDTextField:
            id:last_name
            hint_text: "Last Name"
            mode: "rectangle"
            size_hint_x: .85
            pos_hint: {'center_x': .5, 'center_y': .65}
            on_text: self.text = self.text.replace(" ", "")
            write_tab: False

        MDTextField:
            id:phone
            hint_text: "Phone Number"
            mode: "rectangle"
            size_hint_x: .85
            pos_hint: {'center_x': .5, 'center_y': .55}
            on_text: self.text = self.text.replace(" ", "")
            write_tab: False

        MDTextField:
            id:email
            hint_text: "Email"
            mode: "rectangle"
            size_hint_x: .85
            pos_hint: {'center_x': .5, 'center_y': .45}
            on_text: self.text = self.text.replace(" ", "")
            write_tab: False

        MDTextField:
            id:password
            hint_text: "Password"
            password: True
            mode: "rectangle"
            size_hint_x: .85
            pos_hint: {'center_x': .5, 'center_y': .35}
            on_text: self.text = self.text.replace(" ", "")
            write_tab: False

        BoxLayout:
            size_hint: .6, None
            height: "30dp"
            pos_hint: {'center_x': .5, 'center_y': .25}
            spacing: "15dp"
            MDFlatButton:
                text: "SIGN UP"
                font_size: "20dp"
                size_hint_x: 1
                md_bg_color: "#000000"
                on_press: root.add_user(first_name.text, last_name.text, phone.text, email.text, password.text)
